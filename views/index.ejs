<body>
    <div class="container">
        <h1 class="title"><%= title %></h1>
        <div class="button-group">
            <button type="button" class="btn btn-danger" id="redButton">Red</button>
            <button type="button" class="btn btn-primary" id="blueButton">Blue</button>
